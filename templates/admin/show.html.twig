{% extends 'base.html.twig' %}

{% block title %}Show items
{% endblock %}
{% block body %}
	<div class="container-fluid">
		<div class="card border-secondary mb-3 mt-5" style="max-width: 50rem;">
			<div class="d-flex gap-4">
				<img src="{{ vehicule.photo }}" alt="{{ vehicule.marque }}" width="350px" height="280px">
				<div>
					<h3 class="card-header mb-3">{{ vehicule.titre }}</h3>
					<h5 class="card-title mb-3">{{ vehicule.description }}</h5>
					<h5 class="card-title mb-3">Prix journalier:
						{{ vehicule.prixJournalier }}
						€</h5>
					<button class="btn btn-success">Réserver et payer</button>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
